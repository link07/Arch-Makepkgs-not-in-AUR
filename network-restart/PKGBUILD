# $Id$
# Maintainer : Tyler Holinka

pkgname=network-restart
pkgdesc="Restarts computer after failure to connect to 192.168.1.1"
pkgver=1.0.0
pkgrel=2
arch=('any')
source=("network-restart.service"
        "network-restart-actual-restart.service"
        "network-restart.timer")
md5sums=('a9bdf337ec01ce2407ed92b5d8473973'
         '33a77540e89d79c75aa14af0cad24727'
         '9ff2fbdfa6fb19f2786f71ed85e6ec64')

package() {
    install -Dm644 "$srcdir/network-restart.service" "$pkgdir/usr/lib/systemd/system/network-restart.service"
    install -Dm644 "$srcdir/network-restart.timer" "$pkgdir/usr/lib/systemd/system/network-restart.timer"
    install -Dm644 "$srcdir/network-restart-actual-restart.service" "$pkgdir/usr/lib/systemd/system/network-restart-actual-restart.service"
}
